<div class="container">
  <%= render "shared/show_page_header", record: @survivor %>

  <div class="row mt-5 mb-5">
    <div class="col-12 col-md-6">
      <%= render "shared/show_page_carousel", record: @survivor %>
    </div>

    <div class="col-12 col-md-6">
      <%= render "shared/show_page_table", record: @survivor %>
    </div>
  </div>

  <div class="row">
    <div class="accordion" id="accordion-panels">
      <%= render "survivors/accordion_items/family", record: @survivor %>
      <%= render "survivors/accordion_items/interviews", record: @survivor %>
      <%= render "shared/accordion_items/professional_activities", { record: @survivor } %>
      <%= render "shared/accordion_items/rich_text", { record: @survivor, rich_text_name: :description } %>
      <%= render "shared/accordion_items/rich_text", { record: @survivor, rich_text_name: :observation } %>
    </div>
  </div>
</div>
