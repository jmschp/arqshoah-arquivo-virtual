<div class="accordion-item">
  <h2 class="accordion-header" id="organization_supporters-panel">
    <%= button_tag({ class: "accordion-button collapsed", type: "button", data: { "bs-toggle": "collapse", "bs-target": "#organization_supporters-panel-collapse" }, aria: { expanded: false, controls: "organization_supporters-panel-collapse" } }) do %>
      <%= Education.human_attribute_name(:organization_supporters) %>
    <% end %>
  </h2>
  <div id="organization_supporters-panel-collapse" class="accordion-collapse collapse" aria-labelledby="organization_supporters-panel">
    <div class="accordion-body">
      <div class="row">
        <% if record.organization_supporters.present? %>
          <div class="col-12 col-lg-6">
            <p><strong><%= Education.human_attribute_name(:organization_supporters) %></strong></p>
            <ul class="list-group">
              <% record.organization_supporters.each do |supporter| %>
                <li class="list-group-item"><%= supporter.name %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <% if record.person_supporters.present? %>
          <div class="col-12 col-lg-6">
            <p><strong><%= Education.human_attribute_name(:person_supporters) %></strong></p>
            <div class="list-group">
              <% record.person_supporters.each do |supporters| %>
                <li class="list-group-item"><%= supporters.name %></li>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
