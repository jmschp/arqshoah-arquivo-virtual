<div class="accordion-item">
  <h2 class="accordion-header" id="promoter_institutions-panel">
    <%= button_tag({ class: "accordion-button collapsed", type: "button", data: { "bs-toggle": "collapse", "bs-target": "#promoter_institutions-panel-collapse" }, aria: { expanded: false, controls: "promoter_institutions-panel-collapse" } }) do %>
      <%= "#{Education.human_attribute_name(:promoter_institutions)} & #{Education.human_attribute_name(:organizers)}" %>
    <% end %>
  </h2>
  <div id="promoter_institutions-panel-collapse" class="accordion-collapse collapse" aria-labelledby="promoter_institutions-panel">
    <div class="accordion-body">
      <div class="row">
        <div class="col-12 col-lg-6">
          <p><strong><%= Education.human_attribute_name(:promoter_institutions) %></strong></p>
          <ul class="list-group">
            <% record.promoter_institutions.each do |institution| %>
              <li class="list-group-item"><%= institution.name %></li>
            <% end %>
          </ul>
        </div>

        <div class="col-12 col-lg-6">
          <p><strong><%= Education.human_attribute_name(:organizers) %></strong></p>
          <div class="list-group">
            <% record.organizers.each do |organizer| %>
              <li class="list-group-item"><%= organizer.name %></li>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
