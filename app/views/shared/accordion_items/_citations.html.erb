<% if record.people_cited.present? %>
  <div class="accordion-item">
    <h2 class="accordion-header" id="citations-panel">
      <%= button_tag(class: "accordion-button collapsed", type: "button", data: { "bs-toggle": "collapse", "bs-target": "#citations-panel-collapse" }, aria: { expanded: false, controls: "citations-panel-collapse" }) do %>
        <%= record.class.human_attribute_name(:people_cited) %>
      <% end %>
    </h2>
    <div id="citations-panel-collapse" class="accordion-collapse collapse" aria-labelledby="citations-panel">
      <div class="accordion-body">
        <div class="row">
          <% if record.survivors_citations.present? %>
            <div class="col-12 col-lg-4">
              <p><strong><%= Survivor.model_name.human(count: 2) %></strong></p>
              <div class="list-group">
                <% record.survivors_citations.each do |survivor| %>
                  <!-- TODO: set link-->
                  <%= link_to(survivor.name, "#", class: "list-group-item list-group-item-action") %>
                <% end %>
              </div>
            </div>
          <% end %>
          <% if record.savior_citations.present? %>
            <div class="col-12 col-lg-4">
              <p><strong><%= Savior.model_name.human(count: 2) %></strong></p>
              <div class="list-group">
                <% record.savior_citations.each do |savior| %>
                  <!-- TODO: set link-->
                  <%= link_to(savior.name, "#", class: "list-group-item list-group-item-action") %>
                <% end %>
              </div>
            </div>
          <% end %>
          <% if record.commoners_citations.present? %>
            <div class="col-12 col-lg-4">
              <p><strong><%= Commoner.model_name.human(count: 2) %></strong></p>
              <ul class="list-group">
                <% record.commoners_citations.each do |commoner| %>
                  <li class="list-group-item"><%= commoner.name %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
