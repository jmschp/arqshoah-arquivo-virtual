<% if record.iconographies.present? %>
  <div class="accordion-item">
    <h2 class="accordion-header" id="iconographies-panel">
      <%= button_tag({ class: "accordion-button collapsed", type: "button", data: { "bs-toggle": "collapse", "bs-target": "#iconographies-panel-collapse" }, aria: { expanded: false, controls: "iconographies-panel-collapse" } }) do %>
        <%= Iconography.model_name.human %>
      <% end %>
    </h2>
    <div id="iconographies-panel-collapse" class="accordion-collapse collapse" aria-labelledby="iconographies-panel">
      <div class="accordion-body">
        <div class="list-group">
          <div class="d-flex justify-content-evenly">
            <% record.iconographies.each do |iconography| %>
              <%= link_to(iconography) do %>
                <figure class="figure mx-2">
                  <%= image_tag(iconography.image.variant(resize_to_fill: [400, 300, { crop: :attention }]), { class: "d-block figure-img img-fluid rounded mx-auto" }) %>
                  <figcaption class="figure-caption text-center"><%= iconography.title %></figcaption>
                </figure>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
