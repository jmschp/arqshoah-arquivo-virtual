<div class="container">
  <%= render "shared/show_page_header", record: @book %>

  <div class="row mt-5 mb-5">
    <div class="col-12 col-md-6">
      <%= render "shared/show_page_carousel", record: @book %>
    </div>

    <div class="col-12 col-md-6">
      <%= render "shared/show_page_table", record: @book %>
    </div>
  </div>

  <div class="row">
    <div class="accordion" id="accordion-panels">
      <%= render "books/accordion_items/authors", { record: @book } %>
      <%= render "books/accordion_items/iconographies", { record: @book } %>
      <%= render "shared/accordion_items/citations", { record: @book } %>
      <%= render "shared/accordion_items/rich_text", { record: @book, rich_text_name: :description } %>
      <%= render "shared/accordion_items/rich_text", { record: @book, rich_text_name: :observation } %>
    </div>
  </div>
</div>
